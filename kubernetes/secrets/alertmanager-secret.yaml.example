apiVersion: v1
kind: Secret
metadata:
  name: alertmanager-config
  namespace: monitoring
type: Opaque
stringData:
  alertmanager.yml: |
    global:
      resolve_timeout: 5m

    route:
      group_by: ['alertname', 'severity']
      group_wait: 10s
      group_interval: 10s
      repeat_interval: 1h
      receiver: 'slack-default'
      routes:
        - match:
            severity: critical
          receiver: 'slack-critical'

    receivers:
      - name: 'slack-default'
        slack_configs:
          - api_url: 'REPLACE_WITH_SLACK_WEBHOOK_URL'
            channel: '#alerts'
            send_resolved: true
            title: '{{ .Status | toUpper }}: {{ .CommonLabels.alertname }}'
            text: >-
              {{ range .Alerts }}
              *Alert:* {{ .Labels.alertname }}
              *Severity:* {{ .Labels.severity }}
              *Description:* {{ .Annotations.description }}
              {{ end }}

      - name: 'slack-critical'
        slack_configs:
          - api_url: 'REPLACE_WITH_SLACK_WEBHOOK_URL'
            channel: '#alerts'
            send_resolved: true
            title: 'ðŸš¨ CRITICAL ðŸš¨: {{ .CommonLabels.alertname }}'
            text: >-
              {{ range .Alerts }}
              *Alert:* {{ .Labels.alertname }}
              *Instance:* {{ .Labels.instance }}
              *Description:* {{ .Annotations.description }}
              {{ end }}